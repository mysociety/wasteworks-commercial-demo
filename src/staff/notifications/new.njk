---
layout: staff.njk
title: Add notification type
---

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/select/macro.njk" import govukSelect %}

{{ govukBackLink({
  text: "Back to notifications",
  href: "/staff/notifications",
  classes: "govuk-!-margin-top-0 govuk-!-margin-bottom-6"
}) }}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Add notification type</h1>

    {{ govukInput({
      label: {
        text: "Notification name",
        classes: "govuk-label--s"
      },
      id: "notification-name",
      name: "notification-name"
    }) }}

    {{ govukSelect({
      id: "notification-severity",
      name: "notification-severity",
      label: {
        text: "Severity",
        classes: "govuk-label--s"
      },
      items: [
        { value: "", text: "Choose a severity", selected: true },
        { value: "info", text: "Information" },
        { value: "warning", text: "Warning" },
        { value: "urgent", text: "Urgent" }
      ]
    }) }}

    {{ govukTextarea({
      label: {
        text: "Heading text",
        classes: "govuk-label--s"
      },
      hint: {
        text: "Shown as the banner heading. Use {date} for the collection date."
      },
      id: "notification-heading",
      name: "notification-heading",
      rows: 2
    }) }}

    {{ govukTextarea({
      label: {
        text: "Body text",
        classes: "govuk-label--s"
      },
      hint: {
        text: "Shown as the main notification message. Use {container} for the container description."
      },
      id: "notification-body",
      name: "notification-body",
      rows: 3
    }) }}

    {{ govukTextarea({
      label: {
        text: "Follow-up text",
        classes: "govuk-label--s"
      },
      hint: {
        text: "Additional information shown below the main message. Use {next_date} for the next collection date."
      },
      id: "notification-followup",
      name: "notification-followup",
      rows: 4
    }) }}

    <div class="button-bar govuk-!-margin-top-6">
      {{ govukButton({
        text: "Add notification type"
      }) }}
      {{ govukButton({
        text: "Cancel",
        href: "/staff/notifications",
        classes: "govuk-button--secondary"
      }) }}
    </div>
  </div>
</div>
