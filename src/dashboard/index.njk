<h2 class="govuk-heading-m">Quick actions</h2>

<div class="quick-actions govuk-!-margin-bottom-9">
    {{ card({
      title: "Collection calendar",
      href: "/collections",
      description: "Check your collection schedule or report a missed collection"
    }) }}
    {{ card({
      title: "One-off services",
      href: "/purchase",
      description: "Order replacement sacks, skips, or bulky collections"
    }) }}
    {{ card({
      title: "Container maintenance",
      href: "/containers",
      description: "Tell us if your containers have been damaged or need servicing"
