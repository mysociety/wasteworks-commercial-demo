<h1 class="govuk-heading-l">Help</h1>

<h2 class="govuk-heading-m">Your requests</h2>

<div data-st8-key="container-problem-reported" data-st8-show-if-set>
  <div class="card govuk-!-margin-bottom-4">
    <div style="display: flex; justify-content: space-between; align-items: start; gap: 1rem;">
      <div>
        <h3 class="card__title govuk-heading-s govuk-!-margin-bottom-1">
          <a href="/help/container-report" class="card__stretched-link govuk-link">Container problem report</a>
        </h3>
        <p class="govuk-body-s govuk-!-margin-bottom-1">
          Ref: <strong>RPT-4471-A</strong> &middot; 1100 litre Euro bin, blue with green lid &middot; Café Candide
        </p>
        <p class="govuk-body-s govuk-!-margin-bottom-0 govuk-hint">Submitted today</p>
      </div>
      {{ govukTag({
        text: "Open",
        classes: "govuk-tag--blue"
      }) }}
    </div>
  </div>
</div>

<div data-st8-key="collection-missed" data-st8-show-if-set>
  <div class="card govuk-!-margin-bottom-4">
    <div style="display: flex; justify-content: space-between; align-items: start; gap: 1rem;">
      <div>
        <h3 class="card__title govuk-heading-s govuk-!-margin-bottom-1">
          <a href="/help/missed-collection" class="card__stretched-link govuk-link">Missed collection report</a>
        </h3>
        <p class="govuk-body-s govuk-!-margin-bottom-1">
          Ref: <strong>HDJ2123F-003</strong> &middot; General waste &middot; Café Candide, 72 Guild Street
        </p>
        <p class="govuk-body-s govuk-!-margin-bottom-0 govuk-hint">Submitted today</p>
      </div>
      {{ govukTag({
        text: "Open",
        classes: "govuk-tag--blue"
      }) }}
    </div>
  </div>
</div>

<div data-st8-key="container-problem-reported" data-st8-hide-if-set>
  <div data-st8-key="collection-missed" data-st8-hide-if-set>
    <p class="govuk-body govuk-hint govuk-!-margin-bottom-0">You have no open requests.</p>
  </div>
</div>

<div class="button-bar govuk-!-margin-top-6">
